resources:
- name: {{ id }}-bucket
  type: storage.v1.bucket
  properties:
    storageClass: STANDARD
    acl:
       - entity: allUsers
         role: READER

outputs:
  - name: bucketName
    value: http://$({{ id }}-bucket-acl)


